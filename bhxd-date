echo "Welcome to use BHXD-DATE - Bilibili History XML Downloader (Date Version)"

echo "Usage: bhxd [aid] [start date] [end date] [dir]"
echo "This program required w3m !"
st=`date -d "$2 CST" +%s`
et=`date -d "$3 CST" +%s`
echo "aid $1"
echo "start timestamp $st"
echo "end timestamp $et"
aid=$1
dir=$4
i=$st
mkdir $dir
while (($i<=$et))
do 
w3m http://comment.bilibili.com/dmroll,$i,$aid >> $dir/$i.xml
echo "$i.xml done"
i=$(($i+86400))
done
echo "Done!"

